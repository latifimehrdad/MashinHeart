<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="Negative"
            type="ir.clinicemashin.clinicemashin.viewmodels.FragmentNegativeGradeViewModel" />
    </data>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/FragmentNegativeGradeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/MainFragment"
        android:orientation="vertical"
        android:tag="layout/fragment_negative_grade_0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/FragmentNegativeGradeNew"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_autorenew_yellow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="@string/NegativeGradeNew"
                        android:textColor="@color/MainYellow"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </LinearLayout>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/FragmentNegativeGradeExpandable"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:el_duration="1000"
                app:el_expanded="true"
                app:el_parallax="0.5">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" />

                        <EditText
                            android:id="@+id/FragmentNegativeGradeBarcode"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/MainWhite"
                            android:hint="@string/NegativeGradeBarcode"
                            android:inputType="number"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/FragmentNegativeGradeRefresh"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/ic_autorenew_yellow" />

                            <ImageView
                                android:id="@+id/FragmentNegativeGradeCaptcha"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_60sdp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/FragmentNegativeGradeCaptchaTxt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/MainWhite"
                            android:hint="@string/PoliceFineEnterCaptcha"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/FragmentInsuranceDate"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/FragmentNegativeGradeIgnor"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:background="@drawable/layoutborderblack"
                                android:text="@string/Ignor"
                                android:textColor="@color/MainShadowDown"
                                android:textSize="@dimen/_13sdp" />

                            <Button
                                android:id="@+id/FragmentNegativeGradeSend"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1.0"
                                android:background="@drawable/save_info_button"
                                android:text="@string/NegativeGradeGet"
                                android:textColor="@color/MainYellow"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </net.cachapa.expandablelayout.ExpandableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_margin="@dimen/_5sdp"
            android:background="@color/MainYellow" />

        <TextView
            android:id="@+id/FragmentNegativeGradeGrade"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="right"
            android:text="@string/NegativeGradeNew"
            android:textColor="@color/MainWhite"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/FragmentNegativeGradeCount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="right"
            android:text="@string/NegativeGradeNew"
            android:textColor="@color/MainWhite"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

</layout>
