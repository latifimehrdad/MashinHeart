                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/MainYouCarUpShadow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:background="@color/MainShadowUp"
                                    android:orientation="vertical" />

                                <ImageView
                                    android:id="@+id/MainYouCarImg"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginTop="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/MainYouCarText"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:gravity="center"
                                    android:textColor="@color/MainWhite"
                                    android:textSize="@dimen/_10sdp" />

                                <LinearLayout
                                    android:id="@+id/MainYouCarDownShadow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:background="@color/MainShadowDown"
                                    android:orientation="vertical" />

                                <LinearLayout
                                    android:id="@+id/MainYouCarLine"
                                    android:layout_width="fill_parent"
                                    android:layout_height="1.0dip"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:background="@color/MainWhite"
                                    android:orientation="vertical"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>

                        //Add car

                        <LinearLayout
                            android:id="@+id/MainAddCar"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@color/MainRight"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/MainAddCarLeft"
                                android:layout_width="@dimen/_3sdp"
                                android:layout_height="fill_parent"
                                android:background="@color/MainShadowDown"
                                android:orientation="vertical" />

                            <LinearLayout
