            </RelativeLayout>
            //right


            //fragment

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/mainmainright"
                android:background="@color/MainFragment">

                <fragment
                    android:id="@+id/MainFragment"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/_65sdp"
                    android:padding="@dimen/_3sdp"
                    app:defaultNavHost="true"
                    app:navGraph="@navigation/nav_main"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/MainRight" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:src="@color/MainFragment"
                    app:civ_border_color="@color/MainFragment"
                    app:civ_border_width="@dimen/_5sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/MainImgCircleAdvertise"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:src="@drawable/newadvertise"
                    app:civ_border_color="@color/MainFragment"
                    app:civ_border_width="@dimen/_5sdp" />
            </RelativeLayout>
            //fragment


            <LinearLayout
                android:id="@+id/MainDialogProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/MainBlackTrans"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/_50sdp"
                >

                <EditText
                    android:id="@+id/MainDialogProfileName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/MainWhite"
                    android:hint="@string/ProfileName"
                    android:inputType="textPersonName"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/MainDialogProfileTel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/FragmentConsumableTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/MainWhite"
                    android:hint="@string/ProfilePhone"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/FragmentConsumableDate"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/MainDialogProfileIgnor"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/layoutborderblack"
                        android:text="@string/Ignor"
                        android:textColor="@color/MainShadowDown"
                        android:textSize="@dimen/_13sdp" />

                    <Button
                        android:id="@+id/MainDialogProfileSave"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1.0"
                        android:background="@drawable/save_info_button"
                        android:text="@string/SaveInfo"
                        android:textColor="@color/MainYellow"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
        //main


    </LinearLayout>

</layout>

