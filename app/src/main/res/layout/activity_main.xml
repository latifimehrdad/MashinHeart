                        </LinearLayout>

                        //About

                        <LinearLayout
                            android:id="@+id/MainAbout"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_95sdp"
                            android:background="@color/MainRight"
                            android:gravity="center"
