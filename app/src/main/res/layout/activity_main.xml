                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/MainPoliceFineUpShadow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:background="@color/MainShadowUp"
                                    android:orientation="vertical"
                                    android:visibility="gone" />

                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:src="@drawable/police_fine" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:gravity="center"
                                    android:text="@string/PoliceFine"
                                    android:textColor="@color/MainWhite"
                                    android:textSize="@dimen/_10sdp" />

                                <LinearLayout
                                    android:id="@+id/MainPoliceFineDownShadow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:background="@color/MainShadowDown"
                                    android:orientation="vertical"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:id="@+id/MainPoliceFineLine"
                                    android:layout_width="fill_parent"
                                    android:layout_height="1.0dip"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:background="@color/MainWhite"
                                    android:orientation="vertical"
                                    android:visibility="visible" />
                            </LinearLayout>
                        </LinearLayout>

                        //NegativeGrade

                        <LinearLayout
                            android:id="@+id/MainNegativeGrade"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@color/MainRight"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/MainNegativeGradeLeft"
                                android:layout_width="@dimen/_3sdp"
                                android:layout_height="fill_parent"
                                android:background="@color/MainShadowDown"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/MainNegativeGradeUpShadow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:background="@color/MainShadowUp"
                                    android:orientation="vertical"
                                    android:visibility="gone" />

                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:src="@drawable/negativegrade" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:gravity="center"
                                    android:text="@string/NegativeGrade"
                                    android:textColor="@color/MainWhite"
                                    android:textSize="@dimen/_9sdp" />

                                <LinearLayout
                                    android:id="@+id/MainNegativeGradeDownShadow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:background="@color/MainShadowDown"
                                    android:orientation="vertical"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:id="@+id/MainNegativeGradeLine"
                                    android:layout_width="fill_parent"
                                    android:layout_height="1.0dip"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:background="@color/MainWhite"
                                    android:orientation="vertical"
                                    android:visibility="visible" />
                            </LinearLayout>
                        </LinearLayout>

                        //Advertise

                        <LinearLayout
                            android:id="@+id/MainAdvertise"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@color/MainRight"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/MainAdvertiseLeft"
                                android:layout_width="@dimen/_3sdp"
                                android:layout_height="fill_parent"
                                android:background="@color/MainShadowDown"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/MainAdvertiseUpShadow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:background="@color/MainShadowUp"
                                    android:orientation="vertical"
                                    android:visibility="gone" />

                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:src="@drawable/advertise" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:gravity="center"
                                    android:text="@string/Advertise"
                                    android:textColor="@color/MainWhite"
                                    android:textSize="@dimen/_9sdp" />

                                <LinearLayout
                                    android:id="@+id/MainAdvertiseDownShadow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:background="@color/MainShadowDown"
                                    android:orientation="vertical"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:id="@+id/MainAdvertiseLine"
                                    android:layout_width="fill_parent"
                                    android:layout_height="1.0dip"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:background="@color/MainWhite"
                                    android:orientation="vertical"
                                    android:visibility="visible" />
                            </LinearLayout>
                        </LinearLayout>


                        //Car Sale

                        <LinearLayout
                            android:id="@+id/MainCarSale"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@color/MainRight"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            >

                            <LinearLayout
                                android:id="@+id/MainCarSaleLeft"
                                android:layout_width="@dimen/_3sdp"
                                android:layout_height="fill_parent"
                                android:background="@color/MainShadowDown"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/MainCarSaleUpShadow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:background="@color/MainShadowUp"
                                    android:orientation="vertical"
                                    android:visibility="gone" />

                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:src="@drawable/car_for_sale" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:gravity="center"
                                    android:text="@string/CarForSale"
                                    android:textColor="@color/MainWhite"
                                    android:textSize="@dimen/_10sdp" />

                                <LinearLayout
                                    android:id="@+id/MainCarSaleDownShadow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:background="@color/MainShadowDown"
                                    android:orientation="vertical"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:id="@+id/MainCarSaleLine"
                                    android:layout_width="fill_parent"
                                    android:layout_height="1.0dip"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:background="@color/MainWhite"
                                    android:orientation="vertical"
                                    android:visibility="visible" />
                            </LinearLayout>
                        </LinearLayout>

                        //Update information

                        <LinearLayout
                            android:id="@+id/MainUpdateInfo"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@color/MainRight"
                            android:gravity="center"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/MainUpdateInfoLeft"
                                android:layout_width="@dimen/_3sdp"
                                android:layout_height="fill_parent"
                                android:background="@color/MainShadowDown"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/MainUpdateInfoUpShadow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:background="@color/MainShadowUp"
                                    android:orientation="vertical"
                                    android:visibility="gone" />

                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:src="@drawable/maincircleprofile" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:gravity="center"
                                    android:text="@string/Update_Information"
                                    android:textColor="@color/MainWhite"
                                    android:textSize="@dimen/_8sdp" />

                                <LinearLayout
                                    android:id="@+id/MainUpdateInfoDownShadow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:background="@color/MainShadowDown"
