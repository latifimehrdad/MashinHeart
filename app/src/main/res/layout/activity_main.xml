<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="Main"
            type="ir.clinicemashin.clinicemashin.viewmodels.ActivityMainViewModel" />
    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:tag="layout/activity_main_0">//header

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_70sdp">

            <RelativeLayout
                android:id="@+id/mainheaderright"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@color/MainRight">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@color/MainYellow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/mainheaderright"
                android:background="@color/MainFragment">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@color/MainYellow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/MainProfile"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_46sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_67sdp"
                android:background="@drawable/maincircleprofile">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/MainImgProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/logo" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/MainProfileEdit"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_33sdp"
                android:layout_alignLeft="@id/MainProfile"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_46sdp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/editprofile" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/EditProfile"
                    android:textColor="@color/MainWhite"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@id/MainProfile"
                android:gravity="center|right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/MainProfileName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:text="@string/ProfileName"
                    android:textColor="@color/MainWhite"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/MainProfileTel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:text="@string/ProfilePhone"
                    android:textColor="@color/MainWhite"
                    android:textSize="@dimen/_8sdp"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:src="@drawable/ic_done_all_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:text="@string/SignUpSystem"
                        android:textColor="@color/MainWhite"
                        android:textSize="@dimen/_7sdp" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
        //header


        //main

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">//right

            <RelativeLayout
                android:id="@+id/mainmainright"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@color/MainRight"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/MainYellow" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
