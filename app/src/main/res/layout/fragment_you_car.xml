<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="Youcar"
            type="ir.clinicemashin.clinicemashin.viewmodels.FragmentYouCarViewModel" />
    </data>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/MainFragment"
        android:orientation="vertical"
        android:tag="layout/fragment_you_car_0">

        <LinearLayout
            android:id="@+id/FragmentYouCarEmpty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_75sdp"
                android:gravity="bottom|center"
                android:text="@string/EmptyCar"
                android:textColor="@color/MainYellow"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:background="@color/MainYellow" />

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/ic_subdirectory_arrow_right_black" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/FragmentYouCarRecyclerList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/_10sdp" />
    </LinearLayout>

</layout>
