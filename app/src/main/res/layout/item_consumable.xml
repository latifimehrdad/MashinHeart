<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="Consumable"
            type="com.androidha.mashinheart.databases.DataBaseConsumable" />
    </data>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/MainFragment"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:tag="layout/item_consumable_0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="2"
            android:tag="changeDate"
            android:textColor="@color/MainYellow"
            android:textSize="@dimen/_9sdp"
            app:ValueConsumable="@{Consumable.changeDate}"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="2"
            android:tag="title"
            android:textColor="@color/MainWhite"
            android:textSize="@dimen/_9sdp"
            app:TextConsumable="@{Consumable.title}"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="2"
            android:tag="changeKm"
            android:textColor="@color/MainWhite"
            android:textSize="@dimen/_9sdp"
            app:ValueConsumable="@{Consumable.changeKm}"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="2"
            android:tag="changeNextKm"
            android:textColor="@color/MainWhite"
            android:textSize="@dimen/_9sdp"
            app:ValueConsumable="@{Consumable.changeNextKm}"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="2"
            android:tag="money"
            android:textColor="@color/MainWhite"
            android:textSize="@dimen/_9sdp"
            app:ValueConsumable="@{Consumable.money}"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="2"
            android:tag="brand"
            android:textColor="@color/MainWhite"
            android:textSize="@dimen/_9sdp"
            app:TextConsumable="@{Consumable.brand}"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ItemConsumableEdit"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:src="@drawable/ic_edit_black_24dp" />

            <ImageView
                android:id="@+id/ItemConsumableDelete"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/ic_delete_forever_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/MainShadowUp" />
    </LinearLayout>

</layout>
